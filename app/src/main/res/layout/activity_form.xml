<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/black"
    tools:context=".FormActivity">

    <!-- Full Name -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/fullNameInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Full Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="32dp"
        app:boxBackgroundColor="@android:color/white"
        app:hintTextColor="@android:color/white"
        tools:ignore="HardcodedText">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/fullNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:importantForAutofill="no"
            android:inputType="textPersonName"
            android:textColor="@android:color/white"
            tools:ignore="TouchTargetSizeCheck,VisualLintTextFieldSize" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Date of Birth -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/dobInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Date of Birth"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fullNameInputLayout"
        android:layout_marginTop="16dp"
        app:boxBackgroundColor="@android:color/white"
        app:hintTextColor="@android:color/white"
        tools:ignore="HardcodedText">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/dobEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:importantForAutofill="no"
            android:inputType="date"
            android:textColor="@android:color/white"
            tools:ignore="TouchTargetSizeCheck,VisualLintTextFieldSize" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Aadhar Number -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/aadharInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Aadhar Number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dobInputLayout"
        android:layout_marginTop="16dp"
        app:boxBackgroundColor="@android:color/white"
        app:hintTextColor="@android:color/white"
        tools:ignore="HardcodedText">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/aadharNumberEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:importantForAutofill="no"
            android:inputType="number"
            android:textColor="@android:color/white"
            tools:ignore="TouchTargetSizeCheck,VisualLintTextFieldSize" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Upload Government Document Photo -->
    <Button
        android:id="@+id/uploadDocButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload Document"
        android:layout_marginTop="16dp"
        android:theme="?attr/materialButtonOutlinedStyle"
        app:layout_constraintTop_toBottomOf="@id/aadharInputLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@android:color/white"
        android:background="?attr/colorControlHighlight"
        tools:ignore="HardcodedText" />

    <!-- Upload Plot Photo -->
    <Button
        android:id="@+id/uploadPlotButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload Plot Photo"
        android:layout_marginTop="16dp"
        android:theme="?attr/materialButtonOutlinedStyle"
        app:layout_constraintTop_toBottomOf="@id/uploadDocButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@android:color/white"
        android:background="?attr/colorControlHighlight"
        tools:ignore="HardcodedText" />

    <!-- Submit Button -->
    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/uploadPlotButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@android:color/white"
        android:background="?attr/colorAccent"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>
